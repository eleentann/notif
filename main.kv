MDScreen:
    name: "mainscreen"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: "ntulogo.png"
            size_hint: .5, .5
            pos_hint: {"center_x": .25, "center_y": .9}
        Image:
            source: "welcome.jpg"
            size_hint: .8, .8
            pos_hint: {"center_x": .5, "center_y": .65}

        MDLabel:
            text: "H e l l o!"
            font_name: "RobotoMedium"
            font_size: "23sp"
            pos_hint: {"center_y": .38}
            halign: "center"
            color: rgba(34, 34, 34,255)

        MDLabel:
            text: "H e l l o !"
            font_name: "RobotoMedium"
            font_size: "13sp"
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .3}
            halign: "center"
            color: rgba(127, 127, 127, 255)

        Button:
            text: "LOGIN"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .18}
            background_color: 0, 0, 0, 0
            font_name: "RobotoMedium"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "loginscreen"
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        Button:
            text: "SIGNUP"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .09}
            background_color: 0, 0, 0, 0
            font_name: "RobotoMedium"
            color: rgba(52, 0, 231, 255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signupscreen"
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5, 5, 5, 5, 100

